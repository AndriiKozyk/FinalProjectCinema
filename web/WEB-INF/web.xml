<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Timetable</servlet-name>
        <servlet-class>com.cinema.controller.web.Timetable</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Timetable</servlet-name>
        <url-pattern>/cinema</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaceSelect</servlet-name>
        <servlet-class>com.cinema.controller.web.PlaceSelect</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PlaceSelect</servlet-name>
        <url-pattern>/placeSelect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.cinema.controller.web.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.cinema.controller.web.Registration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

</web-app>